container_commands:
  01_make_start_script_executable:
    command: "chmod +x /var/app/current/start.sh"
    ignoreErrors: false
  02_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: nyc_restaurants.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: nyc_restaurants.settings
    PYTHONPATH: "/var/app/current"
